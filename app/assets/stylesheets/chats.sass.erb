#streams_wrapper
  
  
  
  +outer-container
  //height: 500px
  padding: 20px 10px
  
  #streams_container
  
    width: 100%
    
    +span-columns(9)
    
    #streams_bin
      box-shadow: 5px 2px 15px #888888
      width: 100%
      height: 100%
      +clearfix
      
      #ovid1, #ovid2, #ovid3, #ovid4, #ovid5
        display: block
        position: relative
        width: 20%
        padding-top: 20%
        float: left
        
        #ivid1, #ivid2, #ivid3, #ivid4, #ivid5
          background: fade-out(#DCFCDF, 0.1)
          background-image: url(<%= asset_path "man.png" %>)
          background-repeat: no-repeat
          background-position: center center
          background-size: cover
          
          +position(absolute, 0 0 0 0)
          overflow: hidden
          &:hover 
            .connectdown
              +position(absolute, 0 0 0 0)
          &:hover .overlay
            +position (absolute, 80% 0px null 0px)
            background: fade-out(#1A1F1D, 0.2) 
            color: white
            font-weight: 700
            text-align: center
            line-height: 30px
            cursor: pointer
            
            
          .connectup
            margin: 0 auto
            +position(absolute, 0 0 0 0)
            background: fade-out(green, 0.6)
            cursor: pointer
          
            
            text-align: center
            line-height: 250px
            color: black
            weight: 700
              
            strong
              display: block
          
          
          .connectdown
            margin: 0 auto
            +position(absolute, 100% 0 0 0)
            background: fade-out(green, 0.6)
            cursor: pointer
            
            
            text-align: center
            line-height: 250px
            color: black
            weight: 700
              
            strong
              display: block
              
          .connectNONE
            font-size: 0
          
          .overlay
            
            +position (absolute, 100% 0px null 0px)
            height: 100%
            background: fade-out(#1A1F1D, 0.2) 
            color: white
            font-weight: 700
            text-align: center
            line-height: 30px
            z-index: 10
            +transition-duration(0.5s)
            +transition-timing-function(ease-in)
            
          .overlayno
            font-size: 0
          
  #chat_window
    box-shadow: 5px 2px 15px #888888
    width: 100%
    height: 250px
    
    margin-top: 15px 
    position: relative
    +clearfix
    background: tint($green_base, 98%)
    
    
    #text_area
      overflow: hidden
      resize: none
      width: 80%
      float: left  
      height: 100%
      background: tint($green_base, 98%)
      
      
      border-top: 1px solid lighten($grays, 3%)
      border-bottom: 1px solid lighten($grays, 3%)
      border-left: 1px solid lighten($grays, 3%)
      ul
        li
          padding-left: 5px
    #user_area
      overflow: hidden
      resize: none   
      width: 20%  
      float: left  
      height: 100% 
      font-size: .6em
      border: 1px solid lighten($grays, 3%)
      background: tint($green_base, 98%)
      ul
        li
          padding-left: 5px
  #msg
    
    width: 100%
    +clearfix
    box-shadow: 5px 3px 15px #888888
    margin: 5px 0 0 0
    padding: 0
    height: 48px
    #message
      float: left
      width: 80%
      height: 48px
      
        
      
    button
      float: left
      width: 20%
      height: 48px
      color: white
        
     
     
    
  #chats_aside
    +span-columns(3)
    background: gray
    border: 1px solid lighten($grays, 10%)
    overflow: hidden
    word-wrap: break-word
    height: 420px
    background: tint($green_base, 98%)
   



  
.join_text
  font-size: .9em

.infomsg
  color: red
  font-size: .8em




#streams_wrapper #streams_container
  +media($mobile)
    +span-columns(4)



#streams_wrapper
  +media($tablet)
    padding-top: 45px