
<div class="devise_main">

	<div class='devise_main_wrapper'>

	

		<div class='login_wrapper'>

			<div class='login_form'>

				<div class="devise_headline">
					<div id="headline">
						<h1>Create a FREE account</h1>
					</div>

					<div id="padlock"> 
						<%= render :partial => 'shared/padlock' %>
					</div>
				</div>
		  
		  	

				

				<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<%= f.error_notification %>

				<% if(params[:e] != "" ) %>  
			    	<%= f.input :email, required: true, :input_html => { :value => params[:e] }  %>
			    	<%= f.input :password, required: true, autofocus: true %> 
	    		<% else %>
	    			<%= f.input :email, required: true, autofocus: true  %>
	    			<%= f.input :password, required: true %>
				<% end %>
			    	
			    
			    <%= f.input :password_confirmation, required: true %>
			    <%= f.input :nickname, required: false %>
			  	<div class="avatar_wrapper_current">
	        
	    		<%= f.label "default avatar"  %>
	        	<% if false %>
	        	 if current_user.avatar.url != nil %>
	          		<%= image_tag(current_user.avatar.url(:thumb)) %>
	        	<% else %>
	        	
	          		<%= image_tag("man100px.png") %>
	       		<% end %>
			    <div class="avatar_wrapper">
				    <%= f.label :avatar  %>
				    
				    <%= f.file_field :avatar %>
		       
				</div>	    
				<div class="subscriber_wrapper">
					<%= f.input :subscriber, inline_label: 'Yes, subscriber to newsletter.' %>
				</div>    
		        <div class="terms_wrapper">
					<%= f.input :terms, inline_label: 'Yes, i agree to the FloridaToker terms and conditions.' %>
				</div>
		       
		    



				<div class="devise_signup">
					<%= f.button :submit, "Sign up" %>
				</div>
				<% end %>
				</div>
			</div>

		</div>
		
		<div id="whyregister">
				dfdfdfvdfv
		</div>
	
	
	</div>
</div>









